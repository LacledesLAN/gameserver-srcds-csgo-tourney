{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Latest & Run LL Tests",
            "type": "shell",
            "command": "docker run --rm test/gamesvr-csgo-warmod ./ll-tests/gamesvr-csgo-warmod.sh;",
            "dependsOn": "Linux - Build Latest Docker Image",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Overtime & Run LL Tests",
            "type": "shell",
            "command": "docker run --rm test/gamesvr-csgo-warmod ./ll-tests/gamesvr-csgo-warmod-overtime.sh;",
            "dependsOn": "Linux - Build Overtime Docker Image",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Linux - Build Latest Docker Image",
            "type": "docker-build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dockerBuild": {
                "context": "${workspaceFolder}",
                "dockerfile": "${workspaceFolder}/linux.Dockerfile",
                "tag": "lacledeslan/gamesvr-csgo-warmod:latest",
                "labels": {
                    "com.lacledeslan.build-node": "${env:computername}",
                }
            }
        },
        {
            "label": "Linux - Build Overtime Docker Image",
            "dependsOn": "Linux - Build Docker Image",
            "type": "docker-build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dockerBuild": {
                "context": "${workspaceFolder}",
                "dockerfile": "${workspaceFolder}/linux.Dockerfile",
                "tag": "lacledeslan/gamesvr-csgo-warmod:overtime",
                "labels": {
                    "com.lacledeslan.build-node": "${env:computername}",
                }
            }
        }
    ]
}
